<!DOCTYPE html>
<html>
	<head>
	  <title><%= content_for?(:title) ? yield(:title) : "Find and Share Awesome Sites with Tools and Resources | Treasure Island" %></title>
	  <%= stylesheet_link_tag    'application', 'http://fonts.googleapis.com/css?family=Open+Sans:400,300,500,700', media: 'all', 'data-turbolinks-track' => true %>
	  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
	  <%= csrf_meta_tags %>
		<%= tag :meta, name: 'viewport', content: 'width=device-width, initial-scale=1' %>
		<%= favicon_link_tag 'favicon.ico' %>
	</head>
	<body>
		<%= render "shared/flash" %>
		<%= render "layouts/header" %>

		<%= yield %>

		<%= render "layouts/footer" %>
	
	</body>
</html>
