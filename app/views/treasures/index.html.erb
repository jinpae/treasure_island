<%= search_result_title %>

<div class="alphanumeric-pagination">
	<ul>
		<% letters.each do |letter| %>
			<%= content_tag :li do %>
				<%= link_to letter, treasures_path(letter: letter) %>
			<% end %>
		<% end %>
	</ul>
</div>

<%= search_form_for @q, html: { class: 'search-form' } do |f| %>
	<%= f.search_field :name_or_description_or_url_cont, placeholder: "Search" %>
<% end %>

<%= render @treasures %>

<%= will_paginate @treasures, inner_window: 2, outer_window: 1 %>
