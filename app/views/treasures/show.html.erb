<% page_title @treasure.name %>

<section id="treasure-show-section">
	<div class="container">
		<div class="details-wrapper">
			<h1 class="page-title">
				<%= @treasure.name %>
				<%= link_to_actions(@treasure) %>
			</h1>
			
			<div class="submission-info">
				<p class="submitter">
					<i class="fa fa-user"></i>
					Submitted by <%= link_to @treasure.user.full_name, @treasure.user %>
				</p>
				<p class="submission-date">
					<i class="fa fa-clock-o"></i>
					<%= local_time(@treasure.created_at, "%B %e, %Y") %>
				</p>
			</div>

			<div class="sub-section markdown">
				<h2 class="subtitle">Description</h2>
				<%= markdown @treasure.description %>
			</div>

			<div class="sub-section">
				<h2 class="subtitle">Site Link</h2>
				<p>
					<%= link_to @treasure.url, target: "_blank" do %>
						<%= @treasure.url %>
					<% end %>
				</p>
			</div>

			<div class="tag-list">
				<p><i class="fa fa-tag"></i> <%= tag_link_to @treasure %></p>
			</div>
			
			<div class="heart-wrapper">
				<%= render 'heart_link', treasure: @treasure, css_class: heart_link_css %>
			</div>
		</div>

		<div class="sub-section">
			<!-- DISQUS -->
			<div id="disqus_thread"></div>
			<script type="text/javascript">
			    /* * * CONFIGURATION VARIABLES * * */
			    var disqus_shortname = 'treasure-island';
			    
			    /* * * DON'T EDIT BELOW THIS LINE * * */
			    (function() {
			        var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
			        dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
			        (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
			    })();
			</script>
			<noscript>Please enable JavaScript to view the <a href="https://disqus.com/?ref_noscript" rel="nofollow">comments powered by Disqus.</a></noscript>
			<!-- END OF DISQUS -->
		</div>
			
		<%= link_to "&larr; Back to the list".html_safe, treasures_path, class: "back-to-list-link" %>
	</div>
</section>
