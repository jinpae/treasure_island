<%= form_for @treasure do |f| %>
	<%= render "shared/errors", object: @treasure %>

	<div class="field">
		<%= f.label :name %><br>
		<%= f.text_field :name, autofocus: true %>
	</div>

	<div class="field">
		<%= f.label :url, "URL" %><br>
		<%= f.url_field :url %>
	</div>

	<div class="field">
		<%= f.label :description %><br>
		<%= f.text_area :description %>
	</div>

	<div class="field">
		<%= f.label :tag_list, "Tags (separated by commas)" %><br>
		<%= f.text_field :tag_list, value: @treasure.tag_list.to_s %>
	</div>

	<%= f.submit "Submit" %>
	<%= link_to "Cancel", treasures_path %>
<% end %>
